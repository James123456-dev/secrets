<%- include("header.ejs") -%>
<div class="center-wrapper container">
  <div class="welcome-screen">
    <div class="welcome-cta">
      <p class="welcome-cta-text">No one's watching...</p>
    </div>
    <div class="login-signup">
      <div class="home-header">
        <h2>Sign In</h2>
        <small>Sign In to you account</small>
      </div>
      <div class="buttons-container">
        <a href="">
          <div class="oauth-btn">
            <i class="fab fa-google">icon</i>
            <p>Google</p>
          </div>
        </a>
        <a href="">
          <div class="oauth-btn">
            <i>icon</i>
            <p>Facebook</p>
          </div>
        </a>
      </div>
      <div class="divider">
        <hr />
        <p>or</p>
        <hr />
      </div>
      <div><% if(error) {%> <%=error%> <% } %></div>
      <form method="POST" action="/users/login" class="form">
        <label for="useroremail"> Email or Username</label>
        <input
          type="text"
          name="useroremail"
          placeholder="Enter email or username"
        />
        <label for="useroremail"> Password</label>
        <input type="password" name="password" placeholder="Enter password" />
        <small>Forgot password?</small>
        <div class="buttons-container">
          <button type="submit" class="button">Sign In</button>
          <a class="button button-nofill" href="/users/register"> Sign Up </a>
        </div>
      </form>
    </div>
  </div>
  <%- include("footer.ejs") -%>
</div>
